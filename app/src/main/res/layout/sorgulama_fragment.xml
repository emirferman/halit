<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:text="Sorgu Kriter"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:text="Seçenekler"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/KriterSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/secenekSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectedTarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSorguListe"
            android:layout_width="match_parent"
            android:layout_height="400sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSorgGer"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/onceki_sayifaya_don_button"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"

                android:shadowRadius="5"
                android:text="Geriye Dön"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnSorgCSVDosyaExport"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginRight="25sp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/csv_file_donustur"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"

                android:text="CSV'ya Dönüştür"
                android:textColor="#ffffff"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>