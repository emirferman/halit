<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            app:srcCompat="@drawable/kirgaz_logo"
            tools:srcCompat="@drawable/kirgaz_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

        </LinearLayout>

        <EditText
            android:id="@+id/etProla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Yeni Parolanizi Giriniz"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etParolaTekrari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Parolayı tekrar yazınız"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnParolaDegistir"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/sifreyi_degistir"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:shadowColor="#A8A8A8"


            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            android:text="Parola Değiştir"


            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>